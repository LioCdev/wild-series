{% extends 'base.html.twig' %}

{% block title %}saison #{{ seasons.program.id }}{% endblock %}

{% block body %}
    <H1>{{ seasons.description }}</H1>
    <p>{{ seasons.year }}</p>
    <ul>
    {% for episode in episodes %}
         <li>
            <a href="{{ path("program_episode_show", { programId: seasons.program.id, seasonId: seasons.id, episodeId: episode.id }) }}"><p>{{ episode.title }}</p></a>
             
        </li> 
    {% endfor %}
    </ul>
    <a href="{{ path('program_show', { id: seasons.program.id }) }}">Retour à la fiche de la série</a>
    <br>
    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}